@model LMS.Data.EF.LessonView

@{
    ViewBag.Title = "Lesson View Details";
}

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Employee")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.FullName)
        </dd>

        <dt>
            @Html.DisplayName("Date Viewed")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateViewed)
        </dd>

        <dt>
            @Html.DisplayName("Lesson")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lesson.LessonTitle)
        </dd>

        <dt>
            @Html.DisplayName("Job")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Employee.Job)
        </dd>
        <dt>
            @Html.DisplayName("Course")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Lesson.Cours)
        </dd>
    </dl>
</div>
<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.LessonViewID }) @:|
    }
    @Html.ActionLink("Back to List", "Index")
</p>
