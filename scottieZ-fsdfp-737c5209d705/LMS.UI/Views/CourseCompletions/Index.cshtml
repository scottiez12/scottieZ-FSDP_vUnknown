@model IEnumerable<LMS.Data.EF.CourseCompletion>

@{
    ViewBag.Title = "Courses Completed";
}

<h2>@ViewBag.Title</h2>
@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Manually Create Course Completion", "Create")
    </p>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Employee") 
        </th>
        <th>
            @Html.DisplayName("Date Completed")
        </th>
        <th>
            @Html.DisplayName("Course")
        </th>
        <th>
            @Html.DisplayName("Job")
        </th>
        <th>
            @Html.DisplayName("Job ID")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCompleted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cours.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Job.JobName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.JobID)
        </td>
        <td>
        @if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Edit", "Edit", new { id = item.CourseCompletionID }) @:|
            @Html.ActionLink("Delete", "Delete", new { id = item.CourseCompletionID })@:|
        }
       
            @Html.ActionLink("Details", "Details", new { id=item.CourseCompletionID }) 
        </td>
    </tr>
}

</table>
